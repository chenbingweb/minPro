/* pages/index/index.wxss */
/*引入模板样式*/
@import '../../temp/userheader.wxss';
@import '../../temp/lesson.wxss';
page
{
  display: table;
 
  background-color: #e2ebf2;
 
}
.index_page
{
  box-sizing: border-box;
}
/*签到和金币  */
.index_page .coin_box
{
  width: 750rpx;
  height: 167rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f3f7fa;
  position: relative;
  background-color: white;
}
/*签到  */
.index_page .sign_box
{
  position: absolute;
  left:0;
  top:8rpx;
  width: 114rpx;
  height: 70rpx;
  box-sizing: border-box;
  border:6rpx solid #f49ac1;
  border-left: none;
  border-radius: 0 35rpx 35rpx 0;
  font-size: 24rpx;
  color:#707070;
  display: inline-flex;
  align-items:  baseline;
  padding-top:10rpx;

}
.index_page .sign_box view:nth-of-type(1)
{
  padding: 0 8rpx;
}
