.lesson_item
{
  width: 690rpx;
  height: 110rpx;
  border-top:2rpx solid #e7e7e7;
  display: inline-flex;
  align-items: center;
  box-sizing: border-box;
}
.lesson_item .left
{
  width: 590rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
  padding-left: 56rpx;
  justify-content: center;
}
.lesson_item .right
{
  width: 100rpx;
  height: 110rpx;
   display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color:#a3a3a3;
  position: relative;
}
.lesson_item .lesson_title
{
  display: inline-flex;
  /* align-items:  flex-end ; */
  align-items: center ;
  justify-content: flex-start;
  width: 100%;
  box-sizing: border-box;
}
.lesson_item .lesson_title view:nth-of-type(1)
{
  font-size: 36rpx;
  color:#646464;
  font-weight: bold;
  margin-right: 20rpx;
  max-width: 300rpx;
}
.lesson_item .lesson_title view:nth-of-type(2)
{
  font-size: 16rpx;
  color:#7accc8;
  /* width: 38rpx;
  height: 24rpx; */
   width: 34rpx;
  height: 20rpx;
  border-radius: 6rpx;
  border:4rpx solid #7accc8;
  /* line-height:18rpx; */
   line-height:20rpx;
  text-align: center;
  margin-right: 6rpx;
  /* margin-bottom: 8rpx; 
  box-sizing: border-box;*/
  font-weight: bold;
  
}
.lesson_item .lesson_title view:nth-of-type(3)
{
  font-size: 16rpx;
  color:#5e61e3;
  /* width: 38rpx;
  height: 24rpx; */
  width: 34rpx;
  height: 20rpx;
  border-radius: 6rpx;
  border:4rpx solid #5e61e3;
  line-height:20rpx;
  text-align: center;
    /* margin-bottom: 8rpx; 
    box-sizing: border-box;*/
  font-weight: bold;
}
.lesson_item .info
{
  color:#a3a3a3;
  font-size: 18rpx;
  width: 100%;
}

.king_status
{
  position: absolute;
  left: 50%;
  transform: translateX(-90%);
  top:6rpx;
}