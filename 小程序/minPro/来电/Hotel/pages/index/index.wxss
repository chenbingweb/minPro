/* pages/index/index.wxss */
.search_bar
{
  width: 750rpx;
  margin: 0 auto;
  height: 90rpx;
  box-sizing:border-box;
  padding: 0 30rpx;
}
.search_bar_box
{
  width: 490rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border:2rpx solid #eaeaea;
  background-color: #f9f9f9;
  position: absolute;
  left: 50%;
  top:50%;
  transform: translateX(-50%) translateY(-50%);
  box-sizing: border-box;
  padding: 0 25rpx;
}
.search_input
{
  width: 420rpx;
  height: 50rpx;
  box-sizing: border-box;
   padding: 0 32rpx;
  font-size: 24rpx;
  color:#999999;
}
.map_box
{
  position: absolute;
  left: 0;
  top:90rpx;
  right: 0;
  bottom: 0;
  height: auto;
  width: 750rpx;
}
.help_icon
{
  width: 82rpx;
  height: 80rpx;
  position: absolute;
  left: 48rpx;
  bottom: 374rpx;
}
.move_icon
{
   width: 82rpx;
  height: 80rpx;
  position: absolute;
  left: 48rpx;
  bottom: 254rpx;
}
.scanle
{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 22rpx;
  width: 640rpx;
  height: 100rpx;

}
.sc_button
{
  position: absolute;
  left: 0;
  top:0;
  bottom: 0;
  right: 0;

}
.scan_img
{
  width: 640rpx;
  margin: 0 auto;
  height: 100rpx;
}
.center_pos
{
  position: absolute;
  left: 50%;
  top:50%;
  transform: translateX(-50%) translateY(-50%);
   overflow:visible;
}
.nav_to
{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top:18rpx;
  font-size: 28rpx;
  color:#666666;
  text-align: center;
}
.shop_info
{
  position: absolute;
  width: 727rpx;
  height: 300rpx;
  left: 50%;
  bottom:10rpx;
  transition: 0.2s all linear;
  
}
.shop_bg
{
  position: absolute;
   width: 727rpx;
  height: 300rpx;
  top:0;
  left: 0;
}
.shop_info_box
{
  width: 100%;
  height: 207rpx;
  position: absolute;
  left: 0;
  top:0;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.cover_img
{
  border-radius: 20rpx;
  
}
.info_box
{
  width: 422rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  height: 140rpx;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.title
{
  font-size: 30rpx;
  font-weight: bold;

}
.dis
{
  font-size: 22rpx;
  color:#999999;
  /* word-wrap: break-word; */
  white-space:pre-wrap;
  display: block;
}
.time
{  font-size: 22rpx;
  color:#999999;
}
.distance
{
   font-size: 30rpx;
  font-weight: bold;
  height: 140rpx;
}
.status
{
  position: absolute;
  width:676rpx;
  height: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10rpx;
 
  font-size: 24rpx;
  box-sizing: border-box;
  color:#333333;
}