/* components/nav-bar/nav-bar.wxss */
.nav_bar_component
{
  position: fixed;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;

  z-index: 88;
  pointer-events: none; 
}

.nav_bar_component .nav_box
{
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width:100%;
  background-color: white;
  box-sizing: border-box;
  border-top:2rpx solid #DCDCDC;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  z-index:99999;
  pointer-events: all;
   box-shadow: 0px 4rpx 2rpx 6rpx #e7e7e7;
}
.nav_bar_component .nav_item
{
  width: 33.333%;
  height: 71rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color:#333333;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.nav_bar_component .select_nav
{
  color:#333333;
}
.nav_bar_component .nav_img
{
  width:32rpx;
  height: 32rpx;
  
}
.nav_bar_component .icon_box
{
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav_bar_component .login_btn
{
  position: absolute;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  opacity: 0;
}
.navPos
{
  position:relative;
  top:-50rpx;

}
.img_box
{
 border-radius: 50%;
  background: white;
  overflow: hidden;
  width: 97rpx!important;
  height: 97rpx!important;
  box-shadow:0px -4rpx 2rpx 3rpx #e7e7e7;
}
.tip_font
{
  position: absolute;
  bottom:-26rpx;
  left: 50%;
  transform: translateX(-50%);
}
