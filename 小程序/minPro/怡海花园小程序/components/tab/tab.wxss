/* components/tab/tab.wxss */
.box
{
  width:100%;
  height: 100rpx;
  border-bottom: 2rpx solid #f4f4f4;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btn
{
  text-align: center;
  color:#333;
  font-size: 30rpx;
  width: 33.3333%;
  box-sizing: border-box;
  height: 100rpx;
  line-height: 100rpx;
}
.btn_select
{
  color:#1fa9f2;
  border-bottom: 4rpx solid #1fa9f2;
}
.btn_select_bg
{
  background-color: #f9f6f6;
}
.border_midd
{
  border-left: 2rpx solid #f4f4f4 !important;
  border-right: 2rpx solid #f4f4f4 !important;
}