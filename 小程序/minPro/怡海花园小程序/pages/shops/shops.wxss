  padding-top: 20rpx;
}
.img_style
{
  width:280rpx;
  height:190rpx;
  border-radius: 10rpx;
}
.address_name
{
  color:#c1c2c2;
  font-size: 22rpx;
  margin-left: 12rpx;
}
.ticket_box
{
  padding-left: 32rpx;
}
.shop_name
{
  font-size: 32rpx;
  color:#000;
  font-weight: bold;
}
.ticket_info
{
  font-size: 24rpx;
  color:#f33f50;

}
.tip
{
  width: 92rpx;
  height: 30rpx;
  background-color: #f43c4d;
  line-height: 30rpx;
  text-align: center;
  position: absolute;
  left: 0;
  top:0;
  font-size: 20rpx;
  color:white;
}
