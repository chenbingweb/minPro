  height: 90rpx;
}
.shop_item
{
  width: 750rpx;
  height: 300rpx;
  background-color: white;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding: 0 36rpx;
  display: flex;
   justify-content: space-between; 
  /* align-items: center; */
