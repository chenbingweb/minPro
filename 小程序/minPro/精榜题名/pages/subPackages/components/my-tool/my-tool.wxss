/* pages/subPackages/components/my-tool/my-tool.wxss */
.qc_inline_flex
{
  display: inline-flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10rpx;
}
.my_bg,.my_dj_list
{
  width: 600rpx;
  height: 150rpx;
  background-color: #5c95e1;
  box-shadow: 0px 0rpx 40rpx 4rpx #456fa8 inset;
  border-radius: 34rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin: 0 auto;
  margin-top: 24rpx;
}
.flex_start
{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.relative
{
  position: relative;
}
.icon_box
{
  display: flex;
  justify-content: center;
  align-items: center;
}
.dj_con
{
  margin-top:10rpx;
  margin-bottom: 26rpx;
}
.icon_img
{
  position: absolute;
  left:42%;
  transform: translateX(-50%);
  top:6rpx;
}
.coin_box
{
  position: absolute;
  left:50%;
  transform: translateX(-50%);
  bottom: -14rpx;
  background-color: #3c0807;
  width: 85rpx;
  height: 30rpx;
  border-radius: 15rpx;
  text-align: center;
  line-height: 30rpx;

}
.coin_num
{
  line-height: 30rpx;
  text-align: center;
  color:#ffe984;
  font-size: 24rpx;

}