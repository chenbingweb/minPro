/* pages/ranking/rankingPage.wxss */
@import "./ranking.wxss"; 
@import "./ranking_1.wxss"; 
page
{
  width:100%;
  height: 100%;
 background-image:linear-gradient(180deg,#500206,#571909);
}


.ranking .start_box
{
  position: absolute;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ranking .start_box .icon_box
{
  padding-left: 10rpx;
}
.ranking .info_box
{
  display: inline-flex;
  align-items: center;
}
.ranking .user_info_box
{
  display: inline-flex;
  justify-content:flex-start;
  align-items: center;
}
.ranking .bg_1
{
  position: absolute;
  left:0;
  right: 0;
  top:0;
  bottom: 0;
}
.ranking .bg_2
{
  position: absolute;
  left:0;
  right: 0;
  top:52rpx;
  height: 24rpx;

}
.ranking .text_info
{
  font-size: 18rpx;
  text-align: center;
  line-height: 22rpx;
  color:#fff;
  
}
.ranking .note_info
{
  position: absolute;
  left: 0;
  top:0;
  right: 0;
  bottom: 0;
  text-align: center;
  color:#bab9bf;
  font-size: 20rpx;
  line-height: 34rpx;
}

.ranking .Ani_show
{
  animation:Ani_ranking 0.3s linear;
  animation-fill-mode:forwards;
  animation-delay: 0s;
}
@keyframes Ani_ranking{
  0% {
    opacity: 0
  }

  100%
  {
    opacity: 1
  }
}