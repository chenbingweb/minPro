/*状元考列表*/
.number_one_scholar
{
  padding-top:24rpx;
  padding-left:24rpx;
  padding-right: 30rpx;
}
/*我的排名*/
.my_ranking
{
  width: 100%;
  height: 134rpx;
  margin-bottom:24rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 0 6rpx 6rpx #F2F5F7;
  font-weight: bold;
  /*box-shadow: 水平阴影 垂直阴影 模糊距离 阴影大小 阴影颜色  内部阴影;*/
}
.ranking_title
{
  margin-left:40rpx;
  color:#333;
  font-size: 30rpx;
}
/*w我的序章盒子*/
.my_medal_box
{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-right: 22rpx;
}
/*我的积分*/
.my_interal
{
  color:#f25022;
  font-size: 40rpx;
  margin-right:20rpx;
  font-weight: bold;
}
/*我的序章样式*/
.my_medal_image
{
  width:56rpx;
  height: 80rpx;
}
/*排行列表*/
.ranking_item
{
  width: 100%;
  height: 126rpx;
  margin-bottom:24rpx;
  background-color: white;
  display: flex;
  align-items: center;
  box-shadow: 0 0 6rpx 6rpx #F2F5F7;
}
.ranking_num
{
  width: 76rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ranking_num>text
{
  color:#f25022;
  font-size: 40rpx;
}
.person_medal
{
  display: flex;
  justify-content: center;
  align-items: center;
}
.person_medal>image
{
  width:44rpx;
  height: 54rpx;
}
.item_photo
{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
}
.item_photo .photo
{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.person_info
{
  display: flex;
  align-items: center;
  
}
.person_box
{
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width:300rpx;
}
.person_name
{
  font-size: 36rpx;
  color:#333;
}
.person_company
{
  font-size: 24rpx;
  color:#666666;
}