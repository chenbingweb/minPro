/* exchangeGift.wxss */
.gift_show_box
{
  width:750rpx;
  height: 750rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.gift_show_box>image
{
  width:750rpx;
  height: 750rpx;
}

.address_box
{
  height: 150rpx;
  width:100%;
  box-sizing: border-box;
  padding-top:26rpx;
  position: relative;
}
.address_name
{
  width:80rpx;
  color:#666666;
  font-size: 26rpx;
  box-sizing: border-box;
  border-right: 2rpx solid #B5B5B5;
}
.address_detail_box
{
  display:flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  margin:  0 auto;
}
.addres_detail
{
  color:#666666;
  font-size: 26rpx;
  margin-left:30rpx;
}
.address_container
{
  display: flex;
  align-items: center;
}
.address_manager
{
  width:32rpx;
  height:34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.address_manager>image
{
  width:32rpx;
  height:34rpx;
}
.bottom_line
{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 0;
}
.bottom_line>image
{
  width: 100%;
  height: 10rpx;
}
/*兑换数量*/
.exchange_num_box
{
  width: 100%;
  padding:0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top:56rpx;
}
.exchange_child_box
{
  display: flex;
  align-items: center;
}
.exchange_num_title
{
  color:#333;
  font-size: 26rpx;
}
.control_box
{
  display: inline-flex;
  width: 44rpx;
  height: 44rpx;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  color:#333333;
  font-size: 30rpx;
  line-height: 44rpx;
}
.reduse
{
 border:2rpx solid #D6D6D6;
}
.add_num
{
 border-top:2rpx solid #D6D6D6;
 border-bottom:2rpx solid #D6D6D6;
}
.increase
{
  border:2rpx solid #D6D6D6;
}
.use_score
{
  color:#f25022;
  font-size: 36rpx;
}
/**确认兑换按钮*/
.comfirm_box
{
  margin-top:56rpx;
}
.comfirm_box>button
{
  width: 690rpx;
  height: 90rpx;
  color:#fff;
  font-size: 36rpx;
  background-color: #32B5F2;
  line-height: 90rpx;
}
/*实物兑换成功**/
.succ_icon
{
  width: 100%;
  text-align: center;
  margin-top:250rpx;
}
.succ_text
{
  color:#333333;
  font-size: 36rpx;
  text-align: center;
  line-height: 36rpx;
  margin-top:30rpx;
}
.succ_explain
{
  color:#666;
  font-size: 26rpx;
  line-height: 66rpx;
  text-align: center;
}
/*礼券兑换成功**/
.gift_card_box
{
  width:100%;
  height: 100vh;
  background-color: #F7FAFD;
  padding-top:80rpx;
}
.gift_warning_1
{
  color:#333;
  font-size: 36rpx;
  text-align: center;
  line-height: 36rpx;

}
.gift_warning_1:nth-child(2)
{
  margin-top:24rpx;
  margin-bottom: 30rpx;
}
/**礼品券**/
.gift_token
{
  position: relative;
  width: 690rpx;
  margin:0 auto;
  height: 300rpx;
  background-repeat: no-repeat;
  background-position:0rpx 0rpx;
  background-size:100% 100%;

  
}
.gift_token_box
{
  display: inline-flex;
  align-items: center;
  position: absolute;
   top:55rpx;
  left:0rpx;
  width: 100%;
  box-sizing: border-box;
  padding:0 30rpx;
  
}
.gift_token_value
{
  color:#fff;
  font-size: 60rpx;
  word-break:keep-all;
  width:300rpx;
}
.gift_token_name
{
  color:#fff;
  font-size: 38rpx;
   padding-left:20rpx;
  box-sizing: border-box;
  width: 80%;
}
.gift_token_id
{
  font-size: 36rpx;
  color:#999999;
  position: absolute;
  top:230rpx;
  left:26rpx;
}
