/* pages/home/home.wxss */
@import '../tabbar/tabbar.wxss';
page
{
  background-color: #F5F9FC;
  padding-bottom: 100rpx;
}
/*****banner*****/
.banner
{
  width: 100%;
  height: 370rpx;
}
.banner_item
{
  width: 100%;
  height: 370rpx;
}
.banner_item image
{
  width: 100%;
  height: 370rpx;
}
/****导航*****/
.nav
{
  width:92%;
  padding:0 4%;
  height: 160rpx;
  background-color: white;
  margin-top:26rpx;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
}
.nav_item
{
  display: inline-flex;
  align-items: center;
  width: 340rpx
 
}
.nav_line
{
  display: block;
  height: 120rpx;
  border-left: 2rpx solid #F2F2F2;
}
.image_box
{
  display:flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}
.nav_img
{
  width: 90rpx;
  height: 90rpx;
}
.title_font
{
  font-size: 30rpx;
}
.title_top
{
  color:#666;
}
.title_bottom
{
  color:#999999;
  font-size: 26rpx;
}

/******热门礼品*******/
.hot_img
{
  border-radius: 6rpx;
}
.hot_box
{
  border-top:2rpx solid #EAF0F6;
}
.hot_gift
{
  display: inline-flex;
  justify-content:space-between;
  align-items: baseline;
  width: 92%;
  padding:0 4%;
   margin-top:30rpx;
}
.hot_title
{
  font-size: 36rpx;
  color:#333;
 
}
.hot_more
{
  font-size: 30rpx;
  color:#999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.hot_more::after
{
  content: '';
  display: block;
  width: 20rpx;
  height: 20rpx;
  border-top:2rpx solid #B4B5B6;
  border-right: 2rpx solid #B4B5B6;
  transform: rotateZ(45deg);
}
.scroll_view
{
  width: 100%;
   margin-top:24rpx;
}
.scroll_banner
{
  width: 216rpx;
  margin:0 13rpx;

}
.scoll_box
{
  display:flex;
  align-items:center;
  justify-content:flex-start;
}
.scroll_img
{
  width: 216rpx;
  height: 216rpx;
  border-radius:6rpx;
}
.scroll_title :first-child
{
  color:#666;
  font-size: 26rpx;
  margin-top: 10rpx;
   margin-bottom:10rpx;
}
.scroll_title:last-child
{
  color:#f25022;
  font-size: 30rpx;
 
}
/*********/
.luck_draw
{
  width: 92%;
  padding:26rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx  solid #F3F4F4;
  border-top:2rpx  solid #F3F4F4;
  margin-top:30rpx;
}
.luck_draw>image
{
  height: 260rpx;
  width:100%;
}
/********/
.recommend_box
{
  width: 92%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  margin-top:24rpx;

}
.recommend_item
{
  margin-bottom: 28rpx;
    background-color: white;
    box-shadow:0px 0px 6px #eee;
}
.recommend_item>image
{
  width: 332rpx;
  height: 332rpx;
}
.recommend_info
{
  width: 260rpx;
  margin:0 auto;
  
}
.recommend_info :first-child
{
  color:#666666;
  font-size: 26rpx;
}
.recommend_info :last-child
{
  color:#f25022;
  font-size: 30rpx;
  margin-top:16rpx;
  margin-bottom: 26rpx;
}