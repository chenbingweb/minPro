/* articleDetail.wxss */
page
{
  background-color: #F7FAFD;
  padding-bottom: 30rpx;
}
.article_box
{
  width: 100%;
  padding:0 30rpx;
  box-sizing: border-box;
  padding-top:20rpx;
}
.article_title
{
  font-size: 36rpx;
  color:#333333;
  line-height: 50rpx;
  font-weight: bold;
}
.article_type_box
{
  margin-top:24rpx;
  margin-bottom:24rpx;
  display: inline-flex;
  align-items:baseline;
}
.article_type_box text:nth-child(1)
{
  display: inline-block;
  border:2rpx solid #30b5f2;
  color:#30b5f2;
  font-size: 26rpx;
  padding:4rpx 10rpx;
  border-radius: 10rpx;
  margin-right: 14rpx;
}
.article_type_box text:nth-child(2)
{
  color:#666666;
  font-size: 26rpx;
}
.article_secrit
{
  color:#666;
  font-size: 26rpx;
}
/**富文本**/
.articl_detail_scroll
{
  width: 690rpx;
  
  overflow:auto;
  /*height: 650rpx;*/
}
.rich_text
{
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
/*保密**/
.secrecy
{
  position: absolute;
  opacity: 0.8;
  left:-50rpx;
  width: 300rpx;
  height:50rpx;
  background-color: rgba(204, 204, 204, 0.2);
  text-align: center;
  line-height: 50rpx;
  color:rgba(102, 102, 102, 0.5);
  font-size: 20rpx;
  transform: rotate(-35deg);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
  padding:0 40rpx;
  /*left:-40rpx;*/

}
/*下载标题**/
.article_download
{
  color:#30b5f2;
  font-size: 30rpx;
  height: 45rpx;
  line-height: 45rpx;
  box-sizing: border-box;
  border-left:4rpx solid #30b5f2;
  margin-top:40rpx;
  margin-bottom: 20rpx;
  padding-left: 12rpx;
  font-weight: bold;
}
/*下载资料**/
.download_box
{
  width: 100%;
  background-color: white;
  box-sizing: border-box;
  padding:0 20rpx;
}

.download_item
{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color:#666;
  font-size: 26rpx;
  box-sizing: border-box;
  padding:20rpx 0;
}
.icon_items
{
  display: flex;
  align-items: center;
}
.icon_box
{
  display: flex;
  align-items: center;
  justify-content: center;
  height:64rpx;
width:56rpx;

}
.icon_box>image
{
  width: 30rpx;
  height: 26rpx;
}
.video_box
{
  width: 600rpx;
  overflow: hidden;
  margin: 0 auto;
  
}
