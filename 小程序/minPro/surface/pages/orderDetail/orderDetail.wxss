page
{
  background-color: #F7FAFD;
  padding-top:20rpx;
}
/**订单列表**/
.order_list
{
  width: 100%;
  box-sizing: border-box;
 background-color: white;
}
.order_item
{
  width:100%;
  height: 170rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 30rpx;
  box-sizing:border-box;
  background-color: white;
}
.order_img
{
  display: flex;
  justify-content: center;
  align-items: center;
}
.order_info
{
  display: flex;
  width: 550rpx;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
  position: relative;
}
.order_img>image
{
  width:120rpx;
  height: 120rpx;
  border:2rpx solid #D9D9D9;
}
.order_title
{
  color:#333333;
  font-size: 26rpx;
  line-height: 28rpx;
  display: inline-flex;
  justify-content: space-between;
}
.order_integral
{
  color:#f35b5b;
  line-height: 28rpx;
  font-size: 28rpx;
}
.order_date
{
  color:#666;
  font-size: 26rpx;
   line-height: 26rpx;
}
.order_status
{
  color:#f26137;
  font-size: 24rpx;
  line-height: 24rpx;
}
.order_time
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.order_info::after
{
  content: '';
  display: block;
  width: 20rpx;
  height: 20rpx;
  border-top:2rpx solid #A3A3A3;
  border-right: 2rpx solid #A3A3A3;
  transform: rotateZ(45deg);
  position: absolute;
  right: 0;
  top:66rpx;
}
/*订单类型*/
.order_type
{
  width:100%;
  font-size: 26rpx;
  color:#333333;
  text-align: center;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-top:37rpx;
  margin-bottom: 34rpx;
}
.order_type::before,.order_type::after
{
  content: "";
  display: inline-block;
  width:44rpx;
  border-top:2rpx solid #D9DBDD;
}
/**礼品券**/
.gift_token
{
  position: relative;
  width: 690rpx;
  margin:0 auto;
  height: 300rpx;
  background-repeat: no-repeat;
  background-position:0rpx 0rpx;
  background-size:100% 100%;
  margin-bottom:30rpx;
}
.gift_token_box
{
  display: inline-flex;
  align-items: center;
  position: absolute;
  top:55rpx;
  left:0rpx;
  width: 100%;
  box-sizing: border-box;
  padding:0 30rpx;
}
.gift_token_value
{
  color:#fff;
  font-size: 60rpx;
  word-break:keep-all;
  width:300rpx;
 
  /* margin-right: 64rpx;**/
}
.gift_token_name
{
  color:#fff;
  font-size: 38rpx;
   padding-left:20rpx;
