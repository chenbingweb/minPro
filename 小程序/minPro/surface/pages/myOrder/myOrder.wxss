/* myOrder.wxss */
page
{
  background-color: #F7FAFD;
}
/**订单导航**/
.nav_order
{
  height: 90rpx;
  width: 100%;
  background-color: white;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 24rpx;
}
.nav_bar
{
  width: 152rpx;
  text-align: center;
  line-height: 90rpx;
  height: 90rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color:#666666;
}
.select_bar
{
  border-bottom: 6rpx solid #30b5f2;
  color:#30b5f2;
}
/**订单列表**/
.order_list
{
  width: 100%;
  box-sizing: border-box;
 background-color: white;
}
.order_item
{
  width:100%;
  height: 170rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 30rpx;
  box-sizing:border-box;
  border-bottom: 2rpx solid #F1F1F1;
}
order_img
{
  display: flex;
  justify-content: center;
  align-items: center;
}
.order_info
{
  display: flex;
  width: 550rpx;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}
.order_img>image
{
  width:120rpx;
  height: 120rpx;
  border:2rpx solid #D9D9D9;
}
.order_title
{
  color:#333333;
  font-size: 26rpx;
  line-height: 26rpx;
}
.order_integral
{
  color:#f35b5b;
  line-height: 28rpx;
  font-size: 28rpx;
}
.order_date
{
  color:#666;
  font-size: 26rpx;
   line-height: 26rpx;
}
.order_status
{
  color:#f26137;
  font-size: 24rpx;
  line-height: 24rpx;
}
.order_time
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}