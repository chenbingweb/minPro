/* pages/find/find.wxss */
@import '../../temp/coupon.wxss';
.find_page .search_box
{
  width: 750rpx;
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fb5757;
  display: flex;
  justify-content:center;
  align-items: center;
  position: relative;
}
.search_box input
{
  background-color: white;
  width: 695rpx;
  height: 80rpx;
  border-radius:10rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color:#333;
  /* position: absolute;
  left: 50%;
  top:50%;
  transform: translateX(-50%) translateY(-50%); */
  
}
.search_box .tip_mark
{
  /* position: absolute; */
  top:0;
  bottom:0;
  left:0;
  right:0;
  display: flex;
  justify-content:center;
  align-items: center;
  z-index: 1;
  color:#999;
  font-size: 26rpx;
  width: 695rpx;
  height: 80rpx;
  background: white;
  border-radius: 10rpx;
}
.search_box .tip_margin
{
  margin-left: 18rpx;
}
.select_bar
{
  width: 750rpx;
  height: 120rpx;
  background-color:#fb5757; 
  box-sizing: border-box;
  padding: 0 30rpx;
  display: inline-flex;
  align-items: center;
  /* overflow-y: scroll; */
  padding-right: 30rpx;
 justify-content: space-between;
}
.right_view
{
font-size:2rpx;
color:#fb5757;

}
.select_bar .bar_item
{
 display: inline-block;
  height: 60rpx; 
  min-width: 160rpx;
  /* padding:10rpx 30rpx; */
  border-radius: 30rpx;
  border-top:1px solid white;
  border-bottom:1px solid white;
  border-left:1px solid white;
  border-right:1px solid white;
  text-align: center;
   line-height: 60rpx; 
  color:white;
  margin-right: 18rpx;
  /* box-sizing: border-box; */
}
.select_bar .selected
{
  background-color: #c73737;
  border:1px solid #c73737;

}

.find_coupon_box
{
  box-sizing: border-box;
  padding-top:50rpx;
  padding-bottom: 10rpx;
}
.cancel_search
{
  /* position:absolute; */
  width:100rpx;
  height:80rpx;
  right:40rpx;
  z-index:1;
  text-align:center;
  color:#333;
  font-size:30rpx;
  border:1px solid transparent;
  box-sizing:border-box;
  top:50%;
  /* transform:translateY(-50%); */
  line-height:60rpx;
  border-radius:0 10rpx 10rpx 0;
  background: white;
}
/*后期修改样式  */
.coupon_box
{
  position: absolute;
  top:210rpx;
  bottom:0;
  left: 0;
  right: 0;
  box-sizing: border-box;
  /* padding-top: 210rpx; */
}
.btn_item
{
  width: 158rpx;
  height: 68rpx;
  border:2rpx solid #ffffff;
  color:#fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 6rpx;
  position: relative;
/* overflow:hidden; 
   text-overflow:ellipsis;
   white-space: nowrap; */
}
.btn_item.select_other
{
  color:#fb5757;
  background-color: white;
}
.btn_item.selected_btn
{
  color:#fb5757;
  background-color: white;

  border-radius: 6rpx 6rpx 0 0;
}
.btn_item.selected_btn::after
{
  content: '';
  display: block;
   width: 158rpx;
   border:2rpx solid #ffffff;
  height: 40rpx;
  background-color:#fff;
  position: absolute;
  left:-1rpx;
  top:70rpx;

}
.mark
{
  position: absolute;
 height: 80%;
  left: 0;
  bottom:0;
  right:0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 20;
}
.filter_box
{
  width: 750rpx;
  height: 380rpx;
  background-color: white;
  position: absolute;
  top:0rpx;
  left: 0;
  z-index: 200;
}
.select_child
{
  height: 290rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-top: 20rpx;
 overflow-y: scroll;
}

.ping_pai
{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.ping_pai_checkbox
{
 
  height: 80rpx;
  display: inline-flex;
  align-items: center;
  border-bottom: 2rpx solid #ebebeb;
  box-sizing: border-box;
  
}
.ping_pai_checkbox:nth-of-type(3n-2)
{
  
  width: 230rpx;
}
.ping_pai_checkbox:nth-of-type(3n-1)
{
  padding-left: 30rpx;
  width: 250rpx;
}
.ping_pai_checkbox:nth-of-type(3n)
{
  padding-left: 30rpx;
  width: 210rpx;
}
.ping_pai_checkbox:nth-of-type(3n)::after
{
   content:none;
}
.ping_pai_checkbox::after
{
  content: '';
  display: block;
  width: 2rpx;
  height: 24rpx;
  background: #ebebeb;

}
.ping_pai_checkbox .font_style
{
  color:#585858;
  font-size: 28rpx;
  line-height:80rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  width: 194rpx;
}
.control_btns
{
  height: 90rpx;
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
 
}
.control_btn_item
{
  width: 50%;
  font-size: 32rpx;
  text-align: center;
  line-height: 90rpx;
  border-top:2rpx solid #e5e5e5;
  box-sizing: border-box;
}
.repeat
{
  color:#999999;
}
.sure
{
  background-color: #fb5757;
  color:white;
}
/*门店  */
.shop_check_box
{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.shop_check
{
  display: inline-flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #ebebeb;
  color:#585858;
  font-size: 28rpx;
}
.shop_check:last-child
{
  border:none;
}
.font_style_2
{
  padding-left: 24rpx;
}