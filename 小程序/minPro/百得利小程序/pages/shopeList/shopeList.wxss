.find_coupon_box
{
  box-sizing: border-box;
  padding-top:36rpx;
  padding-bottom: 4rpx;
}
.shop_item
{
  width: 690rpx;
  height: 190rpx;
  background-color: white;
  margin: 0 auto;
  border-radius: 8rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 70rpx;
  margin-bottom: 25rpx;
}
.shop_info_box
{
  width: 390rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* align-items: center; */
  box-sizing: border-box;
  padding-left: 25rpx;
  color:#333;
  font-size: 28rpx;
}
.local_box
{
  display: inline-flex;
  align-items: center;
  /* height: 65rpx; */
  color:#888888;
  font-size: 24rpx;
}

.company_name
{
  box-sizing: border-box;
  /* padding: 10rpx 0; */
  line-height: 30rpx;
  color:#454545;
  font-size:28rpx;
}
.local_pic
{
  align-items:  flex-start;
  /* height: 56rpx; */
  margin-right: 10rpx;
}
.line
{
  position: absolute;
  width: 1px;
  height: 30rpx;
  left:50%;
  top:50%;
  transform: translateY(-50%);
  border-left:1px solid #bb3737;
}
.cancel_search
{
  /* position:absolute; */
  width:100rpx;
  height:80rpx;
  right:40rpx;
  z-index:1;
  text-align:center;
  color:#333;
  font-size:30rpx;
  border:1px solid transparent;
  box-sizing:border-box;
  top:50%;
  /* transform:translateY(-50%); */
  line-height:60rpx;
  border-radius:0 10rpx 10rpx 0;
  background: white;
}