/* pages/find/find.wxss */
@import '../../temp/coupon.wxss';
.find_page .search_box
{
  width: 750rpx;
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fb5757;
  display: flex;
  justify-content:center;
  align-items: center;
  position: relative;
}
.search_box input
{
  background-color: white;
  width: 695rpx;
  height: 80rpx;
  border-radius: 10rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color:#333;
  /* position: absolute;
  left: 50%;
  top:50%;
  transform: translateX(-50%) translateY(-50%); */
}
.search_box .tip_mark
{
  /* position: absolute; */
  top:0;
  bottom:0;
  left:0;
  right:0;
  display: flex;
  justify-content:center;
  align-items: center;
  z-index: 1;
  color:#999;
  font-size: 26rpx;
  transition: 1s;
  height: 80rpx;
  width: 695rpx;
  background: white;
  border-radius: 10rpx;
}
.search_box .tip_margin
{
  margin-left: 18rpx;
}
.select_bar
{
  width: 750rpx;
  height: 120rpx;
  background-color:#fb5757; 
  box-sizing: border-box;
  padding: 0 30rpx;
  display: inline-flex;
  position:relative;

 
}
.select_bar .bar_item
{
  width:100%;
  height: 120rpx;
 display: flex;
 justify-content: center;
 align-items: center;
font-size: 28rpx;
color:white;
  
}

