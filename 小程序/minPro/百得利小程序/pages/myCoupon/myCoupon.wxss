.my_coupon_list
{
  width: 750rpx;
  margin:0 auto;
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}
.checked_mark
{
  position: absolute;
  width: 50%;
  height: 90rpx;
  background-color: #e14e4e;
  left: 0;
  top:0;
  transition: 0.1s;
}
.checked_mark.checked
{
  left: 50%;
}
