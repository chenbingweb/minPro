/* pages/myCoupon/myCoupon.wxss */
@import '../../temp/coupon.wxss';
.select_card
{
  width: 750rpx;
  height: 90rpx;
  background-color: #fb5757;
  margin:0 auto;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-top:2rpx solid #e14e4e;
  position: relative;
}
.select_card .item
{
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color:#fff;
  font-size: 28rpx;
  box-sizing: border-box;
  position: absolute;
  top:0;
  left: 0;
}
.select_card .item:nth-of-type(2)
{
  left: 0%;  
}
.select_card .item:nth-of-type(1)
{
  left: 50%;  
}
