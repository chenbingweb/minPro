.f_30_666
{
  font-size: 30rpx;
  color:#666;
}

.f_34_333
{
  font-size: 34rpx;
  color:#333;
}
.title_3
{
  text-align: center;
  margin-top: 48rpx;
  margin-bottom: 18rpx;
  line-height: 1;
}
.content
{
  margin: 0 auto;
  padding:0 28rpx;
  width: 100%;
